#!/bin/bash

# Pre-commit hook to validate code formatting
# This hook checks if Java files are properly formatted using Spring Java Format

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}Running pre-commit formatting check...${NC}"

# Get list of staged Java files
STAGED_JAVA_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.java$' || true)

if [ -z "$STAGED_JAVA_FILES" ]; then
    echo -e "${GREEN}✓ No Java files to check${NC}"
    exit 0
fi

echo -e "${YELLOW}Found $(echo "$STAGED_JAVA_FILES" | wc -l | tr -d ' ') staged Java file(s)${NC}"

# Check if Maven is available
if ! command -v mvn &> /dev/null; then
    echo -e "${RED}✗ Error: Maven is not installed or not in PATH${NC}"
    exit 1
fi

# Change to project root
cd "$(git rev-parse --show-toplevel)"

# Store the current state of staged files
STAGED_BEFORE=$(git diff --cached --name-only)

# Format all Java files in the project
# Note: Spring Java Format formats all files, not just staged ones
echo -e "${YELLOW}Checking code formatting...${NC}"

# Run formatting check first to see if formatting is needed
if mvn spring-javaformat:check -q > /dev/null 2>&1; then
    echo -e "${GREEN}✓ All Java files are properly formatted${NC}"
    exit 0
fi

# Formatting is needed, apply it
echo -e "${YELLOW}Formatting code...${NC}"
mvn spring-javaformat:apply -q > /dev/null 2>&1 || {
    echo -e "${RED}✗ Error: Failed to format code${NC}"
    exit 1
}

# Check which files were modified by formatting
FORMATTED_FILES=$(git diff --name-only | grep '\.java$' || true)

if [ -n "$FORMATTED_FILES" ]; then
    # Check if any of the formatted files were in the original staged files
    STAGED_FORMATTED=""
    for file in $FORMATTED_FILES; do
        if echo "$STAGED_BEFORE" | grep -q "^$file$"; then
            STAGED_FORMATTED="$STAGED_FORMATTED $file"
        fi
    done

    if [ -n "$STAGED_FORMATTED" ]; then
        echo -e "${YELLOW}The following staged files were automatically formatted:${NC}"
        echo "$STAGED_FORMATTED" | tr ' ' '\n' | grep -v '^$' | while read -r file; do
            echo -e "  ${YELLOW}- $file${NC}"
            # Re-stage the formatted file
            git add "$file"
        done
        echo ""
        echo -e "${GREEN}✓ Formatted files have been re-staged. Continuing with commit...${NC}"
    else
        echo -e "${YELLOW}Some files were formatted, but they were not in your staged changes.${NC}"
        echo -e "${GREEN}✓ Continuing with commit...${NC}"
    fi
else
    echo -e "${GREEN}✓ All Java files are properly formatted${NC}"
fi

exit 0

